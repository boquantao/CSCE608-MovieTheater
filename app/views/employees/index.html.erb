<p id="notice"><%= notice %></p>
<style>
.center {
  margin: auto;
  width: 50%;
  border: 3px solid green;
  padding: 10px;
}
</style>

<div class='center'>
  <% if @cinema  %>
    <h1><%= @cinema.name %>:</h1>
  <% end %>
  <h1>Employees</h1>
  
  <table class="table table-hover", style="text-align:center; padding-left: 50px">
    <thead>
      <tr>
        <th>Name</th>
        <th>Cinema</th>
        <th>Age</th>
        <th colspan="2"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.name %></td>
          <td><%= employee.cinema_id %></td>
          <td><%= employee.age %></td>
          <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
          <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  <% if @cinema  %>
    <%= link_to 'New Employee', new_employee_path(cinema_id: @cinema.id) %>
  <% else %>
    <%= link_to 'New Employee', new_employee_path %>
  <% end %>
  <%= link_to 'Back', cinemas_path %>
</div>